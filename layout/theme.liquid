<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

<style>
    
      :root {
        --font-body: {{ settings.type_primary_font.family | default: '"Inter", sans-serif' | font_face }};
        --font-heading: {{ settings.type_primary_font.family | default: '"Inter", sans-serif' | font_face }}
        --background-1: #111a37;
      }

      *{
        margin:0;
        padding:0;
        box-sizing:border-box;
          font-family: var(--font-body) !important;
      }


      body {
        font-family: var(--font-body);
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
      }

</style>

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
